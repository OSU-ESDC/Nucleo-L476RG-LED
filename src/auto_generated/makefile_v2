# note for compilation: can call a specific function defined here by using
# [make func_name] --> e.g., make clean
CC=arm-none-eabi-gcc
AS=arm-none-eabi-as
MACH=cortex-m4
CFLAGS=-c -mcpu=$(MACH) -mthumb --std=gnu11 -Wall -o0 -g3
LDFLAGS=-nostdlib -T STM32L476RGTX_RAM.ld -Wl,-Map=final.map #-Wl specifies a linker input
ASFLAGS=-c -mcpu=$(MACH) -mthumb -Wall -o0

all: main.o startup_stm32l476rgtx.o final.elf

main.o:main.c
	$(CC) $(CFLAGS) -o $@ $^

startup_stm32l476rgtx.o:startup_stm32l476rgtx.s
	$(CC) $(CFLAGS) -o $@ $^

final.elf: main.o startup_stm32l476rgtx.o
	$(CC) $(LDFLAGS) -o $@ $^

clean:
	rm -rf *.o *.elf *.map

load:
	openocd -f board/st_nucleo_l4.cfg

client:
	arm-none-eabi-gdb

# -Wall: show all warnings
#  clean: function description deletes all .o and .elf files
#  -c: do not link the files
#  -o: create object files
#

